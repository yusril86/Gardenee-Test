<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailActivity">

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/pbDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.AppCompat.ProgressBar"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleCelsius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celsius"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/pink"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:visibility="gone"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCelsius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/tvTitleCelsius"
        app:layout_constraintStart_toStartOf="@id/tvTitleCelsius"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:visibility="gone"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleFahrenheit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FahrenHeit"
        app:layout_constraintTop_toBottomOf="@+id/tvCelsius"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/pink"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFahrenheit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/tvTitleFahrenheit"
        app:layout_constraintStart_toStartOf="@id/tvTitleCelsius"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:visibility="gone"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvErrrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Api"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/pink"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>